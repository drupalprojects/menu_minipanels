/**
 * Implements template_preprocess_page().
 */
function menu_minipanels_preprocess_page(&$variables) {
  $output = '';
  foreach (menu_minipanels_panels() as $ctr => $html) {
    $output .= '<div class="menu-minipanels menu-minipanel-' . $ctr . '">' . $html . '</div>';
  }
  $variables['page']['footer']['menu_minipanels'] = array(
    '#markup' => $output,
  );
}
